<mvc:View
    controllerName="dma.zfichatec.controller.Home"
    xmlns="sap.m"
    xmlns:control="sap.gantt.control"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:unified="sap.ui.unified" >
	<App id="homeId">
        <NavContainer id="idWizardNavContainer1">
            <pages>
                <Page
                    id="idWizardContentPage1"
                    showHeader="false"
                    title="{i18n>appTitle}"
                    enableScrolling="false">
<!--
				<FlexBox width="100%" direction="Column" fitContainer="true">
					<items>
						<FlexBox width="100%" direction="Column" fitContainer="true">
							<items>
								<FlexBox width="100%" justifyContent="Center" height="auto" fitContainer="true" alignContent="Center">
									<items>
										<Image width="auto" height="470px" id="img_epa" src="img/background_cockpit.png" densityAware="false"/>
									</items>
								</FlexBox>
							</items>
						</FlexBox>
					</items>
				</FlexBox>
				<content/>
-->
                    <content>

                        <Wizard
                            id="idWizard01"
                            finishButtonText="{i18n>pesquisar_lbl}"
                            complete="handleWizardCompleted">

                            <WizardStep id="idWizardStep1"
                                        title="{i18n>tela_inicial_tit}"
                                        validated="true">

                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="50%">
                                    
                                    <!-- COMPRADOR -->
                                    <Label
                                        text="{i18n>comprador_lbl}:"
                                        width="76px"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                    <MultiInput
                                        width="350px"
                                        id="idMultiInputCompradorCod1"
                                        suggestionItems="{
                                            path: '/CompradorSet'
                                        }"
                                        tokenChange="onTokenChangeMultiInput"
                                        valueHelpRequest="onValueHelpCompradorOpen"
                                        valueHelpOnly="true" >
                                        <core:Item key="{Ekgrp}" text="{Nome}"/>
                                    </MultiInput>

                                </HBox>
                                
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="50%">
                                    
                                    <!-- FORNECEDOR -->
                                    <Label
                                        text="{i18n>fornecedor_lbl}:"
                                        width="76px"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                    <MultiInput
                                        width="350px"
                                        id="idMultiInputFornecedorCod1"
                                        suggestionItems="{
                                            path: '/FornecedorSet'
                                        }"
                                        tokenChange="onTokenChangeMultiInput"
                                        valueHelpRequest="onValueHelpFornecedorOpen" >
                                        <core:Item key="{Lifnr}" text="{Lifnr}"/>
                                    </MultiInput>
                                </HBox>
                                
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="50%">
                                    
                                    <!-- CONTRATO -->
                                    <Label
                                        text="{i18n>contrato_lbl}:"
                                        width="76px"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                    <MultiInput
                                        width="350px"
                                        id="idMultiInputContrato1"
                                        suggestionItems="{
                                            path: '/ContratoSet'
                                        }"
                                        tokenChange="onTokenChangeMultiInput"
                                        valueHelpRequest="onValueHelpContratoOpen"
                                        valueHelpOnly="true" >
                                        <core:Item key="{Ebeln}" text="{Ebeln}"/>
                                    </MultiInput>
                                </HBox>

                            </WizardStep>

                            <WizardStep id="idWizardStep2"
                                        title="{i18n>vis_relat_tit}"
                                        validated="true">
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="50%">
                                    <RadioButton
                                        id="idRadioButtonVisRelatLoja"
                                        groupName="GroupVisRelat"
                                        text="{i18n>loja_lbl}"
                                        class="sapUiMediumMarginEnd"
                                        selected="{= ${modelScreenParams>/screen1/GroupVisRelat} === '1' }"
                                        select="onRadioButtonSelect" />
                                    <RadioButton
                                        id="idRadioButtonVisRelatGrpPrecos"
                                        groupName="GroupVisRelat"
                                        text="{i18n>grp_precos_lbl}"
                                        class="sapUiMediumMarginEnd"
                                        selected="{= ${modelScreenParams>/screen1/GroupVisRelat} === '2' }"
                                        select="onRadioButtonSelect" />
                                    <RadioButton
                                        id="idRadioButtonVisRelatFonteSupr"
                                        groupName="GroupVisRelat"
                                        text="{i18n>fonte_supr_lbl}"
                                        class="sapUiMediumMarginEnd"
                                        selected="{= ${modelScreenParams>/screen1/GroupVisRelat} === '3' }"
                                        select="onRadioButtonSelect" />
                                </HBox>

                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="50%">
                                    <RadioButton
                                        id="idRadioButtonVisRelatUf"
                                        groupName="GroupVisRelat"
                                        text="{i18n>uf_lbl}"
                                        class="sapUiMediumMarginEnd"
                                        selected="{= ${modelScreenParams>/screen1/GroupVisRelat} === '4' }"
                                        select="onRadioButtonSelect" />
                                    <RadioButton
                                        id="idRadioButtonVisRelatSortim"
                                        groupName="GroupVisRelat"
                                        text="{i18n>sortim_lbl}"
                                        selected="{= ${modelScreenParams>/screen1/GroupVisRelat} === '5' }"
                                        select="onRadioButtonSelect" />
                                </HBox>
                            </WizardStep>

                            <WizardStep id="idWizardStep3"
                                        title="{i18n>filtros_tit}"
                                        validated="true">
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="50%"
                                    class="sapUiLargeMarginEnd" >
                                    
                                    <VBox>
                                        <CheckBox
                                            id="idCheckBoxSomenteMatXdock1"
                                            text="{i18n>somente_mat_xdock_lbl}"
                                            selected="{= ${modelScreenParams>/screen1/idCheckBoxSomenteMatXdock1} === true }"
                                            select="onCheckBoxSelect" />
                                        
                                        <HBox
                                            class="sapUiSmallMarginTop" >

                                            <!-- FONTE DE SUPRIMENTO -->
                                            <Label
                                                text="{i18n>fonte_supr_lbl}:"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                            <MultiInput
                                                width="200px"
                                                id="idMultiInputFonteSuprimento1"
                                                suggestionItems="{
                                                    path: '/SuprimentosSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpFonteSuprimentoOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{}" text="{}"/>
                                            </MultiInput>
                                        </HBox>

                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            
                                            <!-- STATUS DO MATERIAL -->
                                            <Label
                                                text="{i18n>status_mat_lbl}: ="
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                            <MultiInput
                                                width="205px"
                                                id="idMultiInputStatusMat1"
                                                suggestionItems="{
                                                    path: '/StatusMaterialSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpStatusMaterialOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{}" text="{}"/>
                                            </MultiInput>
                                        </HBox>

                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            
                                            <!-- DEPARTAMENTO -->
                                            <Label
                                                text="{i18n>departamento_lbl}:"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                            <MultiInput
                                                width="242px"
                                                id="idMultiInputDepartamento1"
                                                suggestionItems="{
                                                    path: '/DepartamentoSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpDepartamentoOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Node3}" text="{Ltext}"/>
                                            </MultiInput>
                                        </HBox>

                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            
                                            <!-- HIERARQUIA -->
                                            <Label
                                                text="{i18n>no_hierarquia_lbl}:"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                            <MultiInput
                                                width="225px"
                                                id="idMultiInputNoHierarquia1"
                                                suggestionItems="{
                                                    path: '/HierarquiaSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpHierarquiaOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Node6}" text="{Node6}"/>
                                            </MultiInput>
                                        </HBox>

                                    </VBox>

                                    <VBox
                                        class="sapUiLargeMarginBegin" >
                                        <Label text="{i18n>bandeira_lbl}:" />
                                        <HBox>
                                            <CheckBox
                                                id="idCheckBoxAtacado1"
                                                text="{i18n>atacado_lbl}"
                                                selected="{= ${modelScreenParams>/screen1/idCheckBoxAtacado1} === true }"
                                                select="onCheckBoxSelect" />
                                            <CheckBox
                                                id="idCheckBoxVarejo1"
                                                text="{i18n>varejo_lbl}"
                                                selected="{= ${modelScreenParams>/screen1/idCheckBoxVarejo1} === true }"
                                                select="onCheckBoxSelect" />
                                        </HBox>

                                        <Label
                                            text="{i18n>filtros_visoes_lbl}:"
                                            class="sapUiSmallMarginTop" />
                                        <HBox
                                            class="sapUiTinyMarginTop" >

                                            <!-- UF -->
                                            <Label
                                                text="{i18n>uf_lbl}:"
                                                width="50px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                            <MultiInput
                                                width="200px"
                                                id="idMultiInputUf1"
                                                suggestionItems="{
                                                    path: '/UFSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpUfOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Bland}" text="{Bland}"/>
                                            </MultiInput>

                                            <!-- GRUPO DE PREÇOS -->
                                            <Label
                                                text="{i18n>grp_precos_lbl}:"
                                                width="110px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginBegin" />
                                            <MultiInput
                                                width="200px"
                                                id="idMultiInputGrpPrecos1"
                                                suggestionItems="{
                                                    path: '/GrupoPrecosSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpGrpPrecosOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Bandeira}" text="{Descricao}"/>
                                            </MultiInput>
                                        </HBox>

                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            
                                            <!-- LOJAS -->
                                            <Label
                                                text="{i18n>loja_lbl}:"
                                                width="50px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd" />
                                            <MultiInput
                                                width="200px"
                                                id="idMultiInputLojas1"
                                                suggestionItems="{
                                                    path: '/LojasSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpLojasOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Werks}" text="{Werks}"/>
                                            </MultiInput>

                                            <!-- SORTIMENTOS -->
                                            <Label
                                                text="{i18n>sortim_lbl}:"
                                                width="110px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginBegin" />
                                            <MultiInput
                                                width="200px"
                                                id="idMultiInputSortim1"
                                                suggestionItems="{
                                                    path: '/SortimentosSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpSortim"
                                                valueHelpOnly="true" >
                                                <core:Item key="{}" text="{}"/>
                                            </MultiInput>
                                        </HBox>

                                        <HBox>
                                            <CheckBox
                                                id="idCheckBoxTotUf1"
                                                text="{i18n>tot_uf_lbl}"
                                                selected="{= ${modelScreenParams>/screen1/idCheckBoxTotUf1} === true }"
                                                select="onCheckBoxSelect" />
                                            <CheckBox
                                                id="idCheckBoxTotGrp1"
                                                text="{i18n>tot_grp_lbl}"
                                                selected="{= ${modelScreenParams>/screen1/idCheckBoxTotGrp1} === true }"
                                                select="onCheckBoxSelect" />
                                        </HBox>
                                    </VBox>

                                </HBox>
                            </WizardStep>
                        </Wizard>
                    </content>

                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button text="{i18n>reiniciar_pesquisa_lbl}" press="handleWizardResetFilters"/>
                        </OverflowToolbar>
                    </footer>

                </Page>
            </pages>
        </NavContainer>
	</App>
</mvc:View>