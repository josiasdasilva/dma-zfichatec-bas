<mvc:View
    controllerName="dma.zfichatec.controller.Home"
    xmlns="sap.m"
    xmlns:control="sap.gantt.control"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:unified="sap.ui.unified" >
	<App id="homeId">
        <NavContainer id="idWizardNavContainer1">
            <pages>
                <Page
                    id="idWizardContentPage1"
                    showHeader="false"
                    title="{i18n>appTitle}"
                    enableScrolling="false">
                    <content>
                        <Wizard
                            id="idWizard01"
                            finishButtonText="{i18n>pesquisar_lbl}"
                            complete="handleWizardCompleted">
                            <WizardStep id="idWizardStep1"
                                        title="{i18n>tela_inicial_tit}"
                                        validated="true">
                                <!-- COMPRADOR -->
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="100%">
                                    <Label
                                        text="{i18n>comprador_lbl}:"
                                        textAlign="End"
                                        width="120px"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                    <MultiInput
                                        width="550px"
                                        id="idMultiInputCompradorCod1"
                                        suggestionItems="{
                                            path: '/CompradorSet'
                                        }"
                                        tokenChange="onTokenChangeMultiInput"
                                        valueHelpRequest="onValueHelpCompradorOpen"
                                        valueHelpOnly="true" >
                                        <core:Item key="{Ekgrp}" text="{Ekgrp}"/>
                                    </MultiInput>

                                </HBox>
                                
                                <!-- FORNECEDOR -->
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="100%">
                                    <Label
                                        text="{i18n>fornecedor_lbl}:"
                                        textAlign="End"
                                        width="120px"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                    <MultiInput
                                        width="550px"
                                        id="idMultiInputFornecedorCod1"
                                        suggestionItems="{
                                            path: '/FornecedorSet'
                                        }"
                                        tokenChange="onTokenChangeMultiInput"
                                        valueHelpRequest="onValueHelpFornecedorOpen" >
                                        <core:Item key="{Lifnr}" text="{Lifnr}"/>
                                    </MultiInput>
                                </HBox>
                                
                                <!-- CONTRATO -->
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="100%">
                                    <Label
                                        text="{i18n>contrato_lbl}:"
                                        textAlign="End"
                                        width="120px"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                    <MultiInput
                                        width="550px"
                                        id="idMultiInputContrato1"
                                        suggestionItems="{
                                            path: '/ContratoSet'
                                        }"
                                        tokenChange="onTokenChangeMultiInput"
                                        valueHelpRequest="onValueHelpContratoOpen"
                                        valueHelpOnly="true" >
                                        <core:Item key="{Ebeln}" text="{Ebeln}"/>
                                    </MultiInput>
                                </HBox>
                            </WizardStep>

                            <WizardStep id="idWizardStep2"
                                        title="{i18n>vis_relat_tit}"
                                        validated="true">
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="100%">
                                    <RadioButton
                                        id="idRadioButtonVisRelatLoja"
                                        groupName="GroupVisRelat"
                                        text="{i18n>loja_lbl}"
                                        class="sapUiMediumMarginEnd"
                                        selected="true" />
                                    <RadioButton
                                        id="idRadioButtonVisRelatGrpPrecos"
                                        groupName="GroupVisRelat"
                                        text="{i18n>grp_precos_lbl}"
                                        class="sapUiMediumMarginEnd" />
                                    <RadioButton
                                        id="idRadioButtonVisRelatFonteSupr"
                                        groupName="GroupVisRelat"
                                        text="{i18n>fonte_supr_lbl}"
                                        class="sapUiMediumMarginEnd" />
                                    <RadioButton
                                        id="idRadioButtonVisRelatUf"
                                        groupName="GroupVisRelat"
                                        text="{i18n>uf_lbl}"
                                        class="sapUiMediumMarginEnd" />
                                    <RadioButton
                                        id="idRadioButtonVisRelatSortim"
                                        groupName="GroupVisRelat"
                                        text="{i18n>sortim_lbl}" />
                                </HBox>
                            </WizardStep>

                            <WizardStep id="idWizardStep3"
                                        title="{i18n>filtros_tit}"
                                        validated="true">
                                <HBox
                                    alignItems="Start"
                                    justifyContent="Start"
                                    width="100%"
                                    class="sapUiLargeMarginEnd" >
                                    <VBox>
                                        <!-- FONTE DE SUPRIMENTO -->
                                        <HBox
                                            class="sapUiSmallMarginTop" >
                                            <Label
                                                text="{i18n>fonte_supr_lbl}:"
                                                textAlign="End"
                                                width="195px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <MultiInput
                                                width="350px"
                                                id="idMultiInputFonteSuprimento1"
                                                suggestionItems="{
                                                    path: '/FSupSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpFonteSuprimentoOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Sobsl}" text="{Ltext}"/>
                                            </MultiInput>
                                        </HBox>

                                        <!-- STATUS DO MATERIAL -->
                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            <Label
                                                text="{i18n>status_mat_lbl}"
                                                textAlign="End"
                                                width="195px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <MultiInput
                                                width="350px"
                                                id="idMultiInputStatusMaterial1"
                                                suggestionItems="{
                                                    path: '/StatusMatSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpStatusMaterialOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{MTSTA}" text="{MTSTB}"/>
                                            </MultiInput>
                                        </HBox>

                                        <!-- DEPARTAMENTO -->
                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            <Label
                                                text="{i18n>departamento_lbl}:"
                                                textAlign="End"
                                                width="195px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <MultiInput
                                                width="350px"
                                                id="idMultiInputDepartamento1"
                                                suggestionItems="{
                                                    path: '/DepartamentoSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpDepartamentoOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Node3}" text="{Ltext}"/>
                                            </MultiInput>
                                        </HBox>

                                        <!-- HIERARQUIA -->
                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            <Label
                                                text="{i18n>no_hierarquia_lbl}:"
                                                textAlign="End"
                                                width="195px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <MultiInput
                                                width="350px"
                                                id="idMultiInputNoHierarquia1"
                                                suggestionItems="{
                                                    path: '/HierarquiaSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpHierarquiaOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Node6}" text="{Node6}"/>
                                            </MultiInput>
                                        </HBox>

                                        <!-- BANDEIRA -->
                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            <Label
                                                text="{i18n>bandeira_lbl}:"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <ToggleButton 
                                                id="idTBAtacado1"
                                                text="{i18n>atacado_lbl}" 
                                                enabled="true" 
                                                pressed="true" />
                                            <ToggleButton
                                                id="idTBVarejo1"
                                                text="{i18n>varejo_lbl}"
                                                enabled="true" 
                                                pressed="true" />
                                        </HBox>

                                    </VBox>

                                    <VBox
                                        class="sapUiLargeMarginBegin" >

                                        <!-- UF -->
                                        <HBox
                                            class="sapUiSmallMarginTop" >
                                            <Label
                                                text="{i18n>uf_lbl}:"
                                                textAlign="End"
                                                width="120px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <MultiInput
                                                width="350px"
                                                id="idMultiInputUf1"
                                                suggestionItems="{
                                                    path: '/UFSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpUfOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Bland}" text="{Bland}"/>
                                            </MultiInput>
                                        </HBox>

                                        <!-- GRUPO DE PREÇOS -->
                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            <Label
                                                text="{i18n>grp_lbl}:"
                                                textAlign="End"
                                                width="120px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <MultiInput
                                                width="350px"
                                                id="idMultiInputGrpPrecos1"
                                                suggestionItems="{
                                                    path: '/GrupoPrecosSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpGrpPrecosOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Bandeira}" text="{Descricao}"/>
                                            </MultiInput>
                                        </HBox>

                                        <!-- LOJAS -->
                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            <Label
                                                text="{i18n>loja_lbl}:"
                                                textAlign="End"
                                                width="120px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <MultiInput
                                                width="350px"
                                                id="idMultiInputLojas1"
                                                suggestionItems="{
                                                    path: '/LojasSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpLojasOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Werks}" text="{Werks}"/>
                                            </MultiInput>
                                        </HBox>

                                        <!-- SORTIMENTOS -->
                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            <Label
                                                text="{i18n>sortim_lbl}:"
                                                textAlign="End"
                                                width="120px"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <MultiInput
                                                width="350px"
                                                id="idMultiInputSortimento1"
                                                suggestionItems="{
                                                    path: '/SortimSet'
                                                }"
                                                tokenChange="onTokenChangeMultiInput"
                                                valueHelpRequest="onValueHelpSortimentoOpen"
                                                valueHelpOnly="true" >
                                                <core:Item key="{Asort}" text="{Name1}"/>
                                            </MultiInput>
                                        </HBox>

                                        <!-- TOTALIZADOR -->
                                        <HBox
                                            class="sapUiTinyMarginTop" >
                                            <Label
                                                text="{i18n>totaliz_lbl}:"
                                                class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                            <ToggleButton 
                                                id="idTBTotUf1"
                                                text="{i18n>tot_uf_lbl}" 
                                                enabled="true" 
                                                pressed="true" />
                                            <ToggleButton
                                                id="idTBTotGrp1"
                                                text="{i18n>tot_grp_lbl}"
                                                enabled="true" 
                                                pressed="true" />
                                        </HBox>

                                    </VBox>
                                </HBox>

                                <VBox>
                                    <Label
                                        text="{i18n>bandeira_lbl}:"
                                        class="sapUiSmallMarginTop sapUiSmallMarginEnd label_h3" />
                                    <HBox>
                                        <CheckBox
                                            id="idCheckBoxAtacado1"
                                            text="{i18n>atacado_lbl}"
                                            selected="true" />
                                        <CheckBox
                                            id="idCheckBoxVarejo1"
                                            text="{i18n>varejo_lbl}"
                                            selected="true" />
                                    </HBox>

                                    <Label
                                        text="{i18n>totaliz_lbl}:"
                                        class="sapUiTinyMarginTop" />
                                    <HBox>
                                        <CheckBox
                                            id="idCheckBoxTotUf1"
                                            text="{i18n>tot_uf_lbl}"
                                            selected="false" />
                                        <CheckBox
                                            id="idCheckBoxTotGrp1"
                                            text="{i18n>tot_grp_lbl}"
                                            selected="false" />
                                    </HBox>

                                    <CheckBox
                                        id="idCheckBoxSomenteMatXdock1"
                                        text="{i18n>somente_mat_xdock_lbl}"
                                        selected="false"
                                        class="sapUiTinyMarginTop" 
                                        visible="false"/>
                                </VBox>
                            </WizardStep>
                        </Wizard>
                    </content>

                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button text="{i18n>reiniciar_pesquisa_lbl}" press="handleWizardResetFilters"/>
                        </OverflowToolbar>
                    </footer>

                </Page>
            </pages>
        </NavContainer>
	</App>
</mvc:View>